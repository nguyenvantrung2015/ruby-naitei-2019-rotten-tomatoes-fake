<p id="notice"><%= notice %></p>
<h1><%= t ".title" %></h1><span class="badge badge-warning"><%= link_to t(".new"), new_admin_movie_path %></span>
<br>
<br>
<div class="col-12 mb-30">
  <div class="box">
    <div class="box-body">
      <div class="table-responsive">
        <table class="table table-vertical-middle table-selectable">
          <!-- Table Head Start -->
          <thead>
          <tr>
            <th><span><%= t ".id" %></span></th>
            <th><span><%= t ".image" %></span></th>
            <th><span><%= t ".name" %></span></th>
            <th><span><%= t ".action" %></span></th>
          </tr>
          </thead><!-- Table Head End -->
          <tbody>
          <% @movies.each do |movie| %>
            <tr>
              <td>#<%= movie.id %></td>
              <td>
                <%= image_tag movie.poster.url, class: "table-product-image" if movie.poster? %>
              </td>
              <td><h4><%= movie.name %></h4></td>
              <td>
                <h4><%= link_to '<i class="fa fa-eye" aria-hidden="true"></i>'.html_safe, [:admin, movie] %>
                <%= link_to '<i class="fa fa-pencil-square-o" aria-hidden="true"></i>'.html_safe, edit_admin_movie_path(movie) %>
                <%= link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>'.html_safe, [:admin, movie], method: :delete,
                            data: {confirm: t(".sure")} %></h4>
              </td>
            </tr>
          <% end %>
          </tbody><!-- Table Body End -->
        </table>
      </div>
    </div>
  </div>
</div>
<%= paginate @movies, theme: "twitter-bootstrap-3",pagination_class: "pagination-sm" %>
