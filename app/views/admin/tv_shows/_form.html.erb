<%= form_for [:admin, @tv_show] do |f| %>
  <%= render "admin/shared/error_messages", object: f.object %>

  <h4 class="text-warning"><%= f.label t ".name" %></h4>
  <%= f.text_field :name, class: "form-control" %>

  <h4 class="text-warning"><%= f.label t ".info" %></h4>
  <%= f.text_area :info, class: "form-control" %>

  <h4 class="text-warning"><%= f.label t ".poster" %></h4>
  <span class="poster">
    <%= f.file_field :poster, accept: Settings.tvshows.poster_accept %>
  </span>

  <%= f.submit t(".submit"), class: "btn btn-primary"%>
<% end %>
