<header>
  <div class="header-menu mt-50" id="sticky-header">
    <div class="container">
      <div class="row">
        <div class="col-lg-4 col-md-12 col-sm-12">
          <div class="logo-img">
            <%= link_to image_tag("home-one/icon/logo.png", alt: "logo", class: "logo_size"), root_path %>
          </div>
        </div>
        <div class="col-lg-8 col-md-8 col-sm-12">
          <div class="main-menu text-right">
            <nav>
              <ul>
                <li>
                  <%= link_to t("movies_title"), movies_path %>
                </li>
                <li>
                  <%= link_to t("tvshow_title"), tv_shows_path %>
                </li>
                <li>
                  <%= link_to t("news_title"), news_index_path %>
                </li>
                <% if logged_in? %>
                  <li class="adomx-dropdown position-relative col-auto">
                    <%= link_to t("setting"), "#", class: "toggle" %>
                    <ul>
                      <% if current_user.admin? %>
                        <li>
                          <%= link_to t("admin"), admin_root_path %>
                        </li>
                      <% else %>
                        <li>
                          <%= link_to t("profile"), "#" %>
                        </li>
                      <% end %>
                      <li>
                        <%= link_to t("logout"), logout_path, method: :delete %>
                      </li>
                    </ul>
                  </li>
                <% else %>
                  <li>
                    <%= link_to t("login_title"), '#', { 'data-toggle' => 'modal', 'data-target' => '#loginModal'} %>
                  </li>
                  <li>
                    <%= link_to t("signup_title"), '#', { 'data-toggle' => 'modal', 'data-target' => '#signupModal'} %>
                  </li>
                <% end %>
              </ul>
            </nav>
          </div>
        </div>
        <%= form_tag(search_index_path, class: "form-inline", method: :get) do %>
        <div class="input-group">
          <%= text_field_tag :keyword, params[:keyword], class: "form-control",
          autocomplete: :off %>
          <%= select_tag :search_by, options_for_select(["Name", "Year"]),
          class: "form-control" %>
          <span class="input-group-btn">
            <%= submit_tag "Search" , class: "btn btn-outline-success" %>
          </span>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <%= yield :slider %>
</header>
