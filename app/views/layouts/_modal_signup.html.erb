<div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-login" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h2 class="modal-title w-100 font-weight-bold">
          <%= t "sign_up.title"
                %>
        </h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="card-body">
        <%= form_for @user, html: {class: "form-signin"}, url:
                  signup_path do |f| %>
        <%= render "shared/error_messages" %>
        <div class="form-label-group">
          <%= f.label t "name" %>
          <%= f.text_field :name, class: "form-control",
            required: true %>
        </div>

        <div class="form-label-group">
          <%= f.label t "email.title" %>
          <%= f.email_field :email, class: "form-control",
            required: true %>
        </div>

        <div class="form-label-group">
          <%= f.label t "password.title" %>
          <%= f.password_field :password, class: "form-control",
            required: true %>
        </div>

        <div class="form-label-group">
          <%= f.label t "password.confirm" %>
          <%= f.password_field :password, class: "form-control",
            required: true %>
        </div>

        <%= f.hidden_field :role, {value: User.roles.key(Settings.users.role.normal)} %>

        <%= f.button t("sign_up.title"), type: "submit", class:
          "btn btn-lg btn-primary btn-block
          text-uppercase" %>
        <hr class="my-4">
        <% end %>
      </div>
    </div>
  </div>
</div>
