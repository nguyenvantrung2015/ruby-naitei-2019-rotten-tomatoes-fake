<div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-login" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h2 class="modal-title w-100 font-weight-bold">
          <%= t "sign_up.title" %>
        </h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="card-body">
        <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"} do |f| %>
          <div class="form-label-group">
            <%= f.label :name %>
            <%= f.text_field :name, autofocus: true, autocomplete: "email", class: "form-control", required: true  %>
          </div>

          <div class="form-label-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true  %>
          </div>

          <div class="form-label-group">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true  %>
          </div>

          <div class="form-label-group">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true  %>
          </div>

          <%= f.hidden_field :role, {value: User.roles.key(Settings.users.role.normal)} %>

          <%= f.button t("sign_up.title"), type: "submit", class: "btn btn-lg btn-primary btn-block text-uppercase" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
