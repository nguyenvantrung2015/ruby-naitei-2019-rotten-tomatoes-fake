<%= content_for :slider do %>
<div class="slider-area fake-slider container"></div>
<% end %>
<div class="container content-margin-top reset-padding">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-9">
      <h2 class="text-danger movie_head"><%= t ".title" %> </h2>
      <div class="row">
        <% @all_news.each do |news| %>
          <%= render partial: "news", locals: {news: news} %>
        <% end %>
      </div>
      <%= paginate @all_news, theme: "twitter-bootstrap-3",
      pagination_class: "pagination-sm"%>
    </div>
    <div class="col-3 reset-padding">
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <%= link_to t("movies.show.tab_tvshow.title"), "#menu1", data: {toggle: "pill"}, class: "nav-link active"%>
        </li>
        <li class="nav-item">
          <%= link_to t("movies.show.tab_movie.title"), "#menu2", data: {toggle: "pill"}, class: "nav-link" %>
        </li>
      </ul>
      <!-- Tab panes -->
      <div class="tab-content">
        <%= render "tv_shows/menu1"%>
        <%= render "tv_shows/menu2"%>
      </div>
    </div>
  </div>
</div>

